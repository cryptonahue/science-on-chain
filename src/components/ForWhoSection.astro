---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="py-16 bg-neutral-light/50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 text-foreground">
        {t('home.forWho.title')}
      </h2>
      <p class="text-lg text-foreground/70 max-w-3xl mx-auto">
        {t('home.forWho.subtitle')}
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
      <!-- Para Investigadores -->
      <div class="group bg-white rounded-2xl p-8 shadow-lg border border-gray-100 hover:shadow-xl hover:-translate-y-2 transition-all duration-300">
        <div class="mb-6">
          <div class="w-16 h-16 bg-primary/10 rounded-2xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>
          
          <div class="mb-4">
            <h3 class="text-xl font-bold text-foreground mb-2">
              {t('home.forWho.researchers.title')}
            </h3>
            <p class="text-foreground/70 leading-relaxed">
              {t('home.forWho.researchers.description')}
            </p>
          </div>
          
          <!-- Características clave -->
          <div class="space-y-3 mb-6">
            <div class="flex items-center space-x-3 text-sm">
              <div class="w-2 h-2 bg-primary rounded-full"></div>
              <span class="text-foreground/70">Financiamiento alternativo sin burocracia</span>
            </div>
            <div class="flex items-center space-x-3 text-sm">
              <div class="w-2 h-2 bg-primary rounded-full"></div>
              <span class="text-foreground/70">Peer review transparente y rápido</span>
            </div>
            <div class="flex items-center space-x-3 text-sm">
              <div class="w-2 h-2 bg-primary rounded-full"></div>
              <span class="text-foreground/70">Control total sobre tu propiedad intelectual</span>
            </div>
          </div>
        </div>
        
        <a href={`/${lang}/para-investigadores`} class="w-full bg-primary text-white py-3 px-6 rounded-xl font-medium hover:bg-primary-dark transition-colors flex items-center justify-center space-x-2 group-hover:shadow-md">
          <span>{t('home.forWho.researchers.cta')}</span>
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>
      
      <!-- Para Estudiantes -->
      <div class="group bg-white rounded-2xl p-8 shadow-lg border border-gray-100 hover:shadow-xl hover:-translate-y-2 transition-all duration-300">
        <div class="mb-6">
          <div class="w-16 h-16 bg-secondary/10 rounded-2xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          </div>
          
          <div class="mb-4">
            <h3 class="text-xl font-bold text-foreground mb-2">
              {t('home.forWho.students.title')}
            </h3>
            <p class="text-foreground/70 leading-relaxed">
              {t('home.forWho.students.description')}
            </p>
          </div>
          
          <!-- Características clave -->
          <div class="space-y-3 mb-6">
            <div class="flex items-center space-x-3 text-sm">
              <div class="w-2 h-2 bg-secondary rounded-full"></div>
              <span class="text-foreground/70">Acceso gratuito a investigación de vanguardia</span>
            </div>
            <div class="flex items-center space-x-3 text-sm">
              <div class="w-2 h-2 bg-secondary rounded-full"></div>
              <span class="text-foreground/70">Networking con científicos globales</span>
            </div>
            <div class="flex items-center space-x-3 text-sm">
              <div class="w-2 h-2 bg-secondary rounded-full"></div>
              <span class="text-foreground/70">Oportunidades de micro-colaboración</span>
            </div>
          </div>
        </div>
        
        <a href={`/${lang}/para-estudiantes`} class="w-full bg-secondary text-white py-3 px-6 rounded-xl font-medium hover:bg-secondary-dark transition-colors flex items-center justify-center space-x-2 group-hover:shadow-md">
          <span>{t('home.forWho.students.cta')}</span>
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>
      
      <!-- Para Desarrolladores -->
      <div class="group bg-white rounded-2xl p-8 shadow-lg border border-gray-100 hover:shadow-xl hover:-translate-y-2 transition-all duration-300">
        <div class="mb-6">
          <div class="w-16 h-16 bg-accent/10 rounded-2xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
            </svg>
          </div>
          
          <div class="mb-4">
            <h3 class="text-xl font-bold text-foreground mb-2">
              {t('home.forWho.developers.title')}
            </h3>
            <p class="text-foreground/70 leading-relaxed">
              {t('home.forWho.developers.description')}
            </p>
          </div>
          
          <!-- Características clave -->
          <div class="space-y-3 mb-6">
            <div class="flex items-center space-x-3 text-sm">
              <div class="w-2 h-2 bg-accent rounded-full"></div>
              <span class="text-foreground/70">APIs y protocolos DeSci documentados</span>
            </div>
            <div class="flex items-center space-x-3 text-sm">
              <div class="w-2 h-2 bg-accent rounded-full"></div>
              <span class="text-foreground/70">Validación directa con científicos</span>
            </div>
            <div class="flex items-center space-x-3 text-sm">
              <div class="w-2 h-2 bg-accent rounded-full"></div>
              <span class="text-foreground/70">Oportunidades de colaboración</span>
            </div>
          </div>
        </div>
        
        <a href={`/${lang}/para-desarrolladores`} class="w-full bg-accent text-white py-3 px-6 rounded-xl font-medium hover:bg-accent-dark transition-colors flex items-center justify-center space-x-2 group-hover:shadow-md">
          <span>{t('home.forWho.developers.cta')}</span>
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

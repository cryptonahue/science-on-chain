---
interface Props {
  title: string;
  content: string;
  linkText: string;
  linkUrl: string;
  colorClass?: string;
  iconName?: string;
}

const { 
  title, 
  content, 
  linkText, 
  linkUrl,
  colorClass = "from-primary/5 to-secondary/5",
  iconName = "beaker"
} = Astro.props;

// Mapeamos iconos a sus paths de SVG
const iconPaths = {
  'beaker': 'M7 2H5a2 2 0 00-2 2v16a2 2 0 002 2h10a2 2 0 002-2V4a2 2 0 00-2-2h-2M9 2h2M6 16a5 5 0 1110 0M6 13h8',
  'molecule': 'M14.5 11c1.5 0 2.5 1.5 2.5 2.5 0 1.5-1 2.5-2.5 2.5h-2.5m-2-10C8.5 6 7 7 7 8.5S8.5 11 10 11h2.5m-5 3c-1.5 0-2.5 1.5-2.5 2.5 0 1.5 1 2.5 2.5 2.5h2.5m2-10C13 6 14.5 7 14.5 8.5 13 10 11.5 11 10 11h2.5m-5 3C6 14 4.5 15 4.5 16.5 6 18 7.5 19 9 19h2.5M10 5v16',
  'lightning': 'M13 10V3L4 14h7v7l9-11h-7z',
  'leaf': 'M5 21c.36-4.29 3.54-7.36 7.88-7.85.33-.04.59-.31.59-.65V4a1 1 0 0 1 1-1c6 0 9 7 9 10a9 9 0 0 1-9 9h-2c-2.96 0-5.43-1.67-6.59-4h.59c.36 0 .71-.1 1.01-.32.51-.34.57-1.09.1-1.49A7.43 7.43 0 0 1 5 11.86V21z',
  'network': 'M9 17H5a2 2 0 000 4h4a2 2 0 000-4zm0 0V9.5m0 7.5h6m0 0h4a2 2 0 000-4h-4a2 2 0 000 4zm0 0V9.5m-6-3V4a2 2 0 114 0v2.5M9 6.5h6',
  'globe': 'M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9',
};
---

<div class="max-w-md w-full h-full">
  <!-- Card inspirada en el estilo moderno de Gitcoin -->
  <div class={`w-full h-full relative overflow-hidden rounded-lg border border-gray-100 bg-white shadow-lg p-8 transition-all duration-300 hover:-translate-y-1 hover:shadow-xl group`}>
    <!-- Decoración de fondo sutiles -->
    <div class={`absolute top-0 left-0 -z-10 w-full h-full bg-gradient-to-br ${colorClass} opacity-50`}></div>
    
    <!-- Icon - estilo Gitcoin -->
    <div class="relative z-10 mb-6">
      <div class="inline-flex items-center justify-center p-3 rounded-lg bg-primary/10 text-primary-dark">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d={iconPaths[iconName]} />
        </svg>
      </div>
    </div>
    
    <div class="relative z-10">
      <h3 class="mb-4 text-2xl text-primary-dark">{title}</h3>
      <p class="text-foreground/70 mb-8 leading-relaxed">{content}</p>
      
      <!-- Botón de estilo Gitcoin con mejor contraste -->
      <a href={linkUrl} class="inline-flex items-center font-medium text-primary-dark hover:text-primary transition-colors duration-300 group-hover:translate-x-1">
        {linkText}
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1 transform group-hover:translate-x-1 transition-transform duration-300" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</div>
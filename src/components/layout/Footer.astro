---
import { getLangFromUrl, useTranslations } from '../../i18n/utils.js';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const year = new Date().getFullYear();
---

<footer class="pt-20 pb-10 bg-neutral-light border-t border-primary/20 relative">
  <!-- Elementos decorativos estilo Celo -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute bottom-[20%] right-[5%] w-48 h-48 border border-primary/10 transform rotate-12"></div>
    <div class="absolute top-[10%] left-[15%] w-32 h-32 border border-primary/10 transform -rotate-12"></div>
  </div>

  <div class="container mx-auto px-4">
    <!-- Top Footer -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-10 mb-16">
      <!-- Logo y descripción - Estilo Celo -->
      <div>
        <div class="flex items-center mb-6">
          <span class="text-2xl font-bold text-foreground">Science<span class="text-primary">OnChain</span></span>
        </div>
        <p class="text-foreground/70 mb-6 max-w-xs leading-relaxed">
          {t('footer.tagline')}
        </p>

        <!-- Social Icons - Estilo Celo/Gitcoin -->
        <div class="flex space-x-3">
          <a href="https://x.com/scienceonchain" target="_blank" rel="noopener noreferrer" class="w-10 h-10 rounded-xl bg-white-pure flex items-center justify-center text-primary hover:bg-primary hover:text-white transition-colors duration-300 shadow-sm">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
          <a href="https://www.linkedin.com/company/scienceonchain" target="_blank" rel="noopener noreferrer" class="w-10 h-10 rounded-xl bg-white-pure flex items-center justify-center text-primary hover:bg-primary hover:text-white transition-colors duration-300 shadow-sm">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Enlaces rápidos -->
      <div>
        <h4 class="text-lg font-bold mb-5 text-foreground">{t('footer.links.title')}</h4>
        <ul class="space-y-3">
          <li><a href="#que-es-desci" class="text-foreground/70 hover:text-primary transition-colors">{t('nav.whatIsDesci')}</a></li>
          <li><a href="#recursos" class="text-foreground/70 hover:text-primary transition-colors">{t('nav.resources')}</a></li>
          <li><a href="#nosotros" class="text-foreground/70 hover:text-primary transition-colors">{t('nav.aboutUs')}</a></li>
          <li><a href="#contacto" class="text-foreground/70 hover:text-primary transition-colors">{t('nav.contact')}</a></li>
        </ul>
      </div>
    </div>
    
    <!-- Bottom Footer - Estilo Celo -->
    <div class="pt-8 border-t border-primary/10 flex flex-col md:flex-row justify-between items-center">
      <div class="text-foreground/60 text-sm mb-4 md:mb-0">
        &copy; {year} ScienceOnChain. {t('footer.rights')}
      </div>
      
      <!-- Idiomas -->
      <div class="flex items-center gap-4 mb-4 md:mb-0">
        <span class="text-sm text-foreground/60">{t('nav.language')}:</span>
        <div class="flex gap-3">
          <a href="/en/" class={`text-sm ${lang === 'en' ? 'text-primary font-medium' : 'text-foreground/60 hover:text-primary'}`}>English</a>
          <a href="/es/" class={`text-sm ${lang === 'es' ? 'text-primary font-medium' : 'text-foreground/60 hover:text-primary'}`}>Español</a>
          <a href="/pt/" class={`text-sm ${lang === 'pt' ? 'text-primary font-medium' : 'text-foreground/60 hover:text-primary'}`}>Português</a>
        </div>
      </div>
      
      <!-- Links legales - Estilo Celo -->
      <!-- <div class="flex gap-6">
        <a href="#" class="text-sm text-foreground/60 hover:text-primary transition-colors">{t('footer.legal.privacy')}</a>
        <a href="#" class="text-sm text-foreground/60 hover:text-primary transition-colors">{t('footer.legal.terms')}</a>
      </div> -->
    </div>
  </div>
</footer>
---
import { useTranslations } from '../../../i18n/utils.js';

interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<div class="lg:hidden">
  <input type="checkbox" id="mobile-menu-toggle" class="mobile-menu-checkbox">
  <label for="mobile-menu-toggle" class="mobile-menu-button">
    <div class="hamburger">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </label>

  <!-- Mobile Menu -->
  <div class="mobile-menu">
    <div class="mobile-menu-content">
      <!-- Header with Logo and Close Button -->
      <div class="flex justify-between items-center mb-8">
        <div class="flex items-center space-x-3">
          <img src="/logo.svg" alt="ScienceOnChain Logo" class="h-8 w-auto" />
          <a href={`/${lang}/`} class="text-xl font-bold font-merriweather">
            <span class="text-primary">Science</span><span class="text-foreground">OnChain</span>
          </a>
        </div>
        <label for="mobile-menu-toggle" class="mobile-close-button">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </label>
      </div>

      <nav class="mobile-menu-nav">
        <a href="#que-es-desci" class="mobile-menu-link">
          {t('nav.whatIsDesci')}
        </a>
        <a href="#recursos" class="mobile-menu-link">
          {t('nav.resources')}
        </a>
        <a href="#nosotros" class="mobile-menu-link">
          {t('nav.aboutUs')}
        </a>
        <a href="#contacto" class="mobile-menu-link">
          {t('nav.contact')}
        </a>
      </nav>

      <!-- Mobile Language & CTAs -->
      <div class="mobile-menu-footer">
        <div class="mobile-language-selector">
          <span class="text-sm font-medium text-foreground/60 mb-2 block">{t('nav.language')}</span>
          <div class="flex gap-2">
            <a href="/es/" class={`mobile-lang-btn ${lang === 'es' ? 'active' : ''}`}>ES</a>
            <a href="/en/" class={`mobile-lang-btn ${lang === 'en' ? 'active' : ''}`}>EN</a>
            <a href="/pt/" class={`mobile-lang-btn ${lang === 'pt' ? 'active' : ''}`}>PT</a>
          </div>
        </div>
        
        <div class="mobile-cta-buttons">
          <!-- <a href={`/${lang}/comenzar`} class="mobile-cta-primary">
            Comenzar
          </a> -->
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Mobile Menu */
  .mobile-menu-checkbox {
    @apply hidden;
  }

  .mobile-menu-button {
    @apply flex items-center justify-center w-10 h-10 rounded-lg hover:bg-primary/10 transition-colors cursor-pointer;
  }

  .hamburger {
    @apply relative w-6 h-6 flex flex-col justify-around;
  }

  .hamburger span {
    @apply block h-0.5 bg-foreground rounded transition-all duration-300;
  }

  .mobile-menu-checkbox:checked ~ .mobile-menu-button .hamburger span:nth-child(1) {
    @apply rotate-45 translate-y-2;
  }

  .mobile-menu-checkbox:checked ~ .mobile-menu-button .hamburger span:nth-child(2) {
    @apply opacity-0;
  }

  .mobile-menu-checkbox:checked ~ .mobile-menu-button .hamburger span:nth-child(3) {
    @apply -rotate-45 -translate-y-2;
  }

  .mobile-menu {
    @apply fixed top-0 right-0 bottom-0 left-0 z-40 transform translate-x-full transition-transform duration-300 ease-in-out shadow-2xl;
    background: #FAF9F5;
    width: 100vw;
    height: 100vh;
    height: 100dvh;
  }

  .mobile-menu-checkbox:checked ~ .mobile-menu {
    @apply translate-x-0;
  }

  .mobile-menu-content {
    @apply flex flex-col h-full p-6 pt-8 relative z-10;
    background-color: #FAF9F5 !important;
    min-height: 100vh;
    min-height: 100dvh;
  }

  .mobile-close-button {
    @apply w-10 h-10 rounded-lg flex items-center justify-center text-foreground hover:bg-primary/10 hover:text-primary transition-colors cursor-pointer;
  }

  .mobile-menu-nav {
    @apply flex flex-col space-y-4 flex-1;
  }

  .mobile-menu-link {
    @apply block p-4 rounded-xl hover:bg-primary/10 hover:text-primary transition-colors text-lg font-medium text-foreground;
  }

  .mobile-menu-footer {
    @apply mt-auto space-y-6;
  }

  .mobile-language-selector {
    @apply text-center;
  }

  .mobile-lang-btn {
    @apply px-4 py-2 rounded-lg border border-primary/20 text-foreground/80 hover:border-primary hover:text-primary transition-colors;
  }

  .mobile-lang-btn.active {
    @apply bg-primary text-white border-primary;
  }

  .mobile-cta-buttons {
    @apply flex flex-col space-y-3;
  }

  .mobile-cta-secondary {
    @apply text-center py-3 px-6 border border-primary/20 text-foreground rounded-xl hover:border-primary hover:text-primary transition-colors;
  }

  .mobile-cta-primary {
    @apply text-center py-3 px-6 bg-primary text-white rounded-xl hover:bg-primary-dark transition-colors;
  }
</style>
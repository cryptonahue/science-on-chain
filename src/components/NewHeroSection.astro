---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="relative overflow-hidden bg-gradient-to-br from-neutral-light to-white">
  <!-- Background Elements -->
  <div class="absolute inset-0 -z-10">
    <!-- Animated background blobs -->
    <div class="absolute top-1/4 left-1/4 w-72 h-72 bg-primary/5 rounded-full mix-blend-multiply animate-pulse"></div>
    <div class="absolute top-1/3 right-1/4 w-72 h-72 bg-secondary/5 rounded-full mix-blend-multiply animate-pulse" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-1/4 left-1/3 w-72 h-72 bg-accent/5 rounded-full mix-blend-multiply animate-pulse" style="animation-delay: 2s;"></div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 pt-20 pb-16">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Left Column - Content -->
      <div class="space-y-8 text-center lg:text-left">
        <!-- Announcement Badge -->
        <div class="inline-flex items-center space-x-2 bg-primary/10 text-primary-dark px-4 py-2 rounded-full text-sm font-medium">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
          </svg>
          <span>Nuevo: Research Paper "Estado de DeSci en LatAm 2025"</span>
        </div>

        <!-- Main Headline with Dynamic Text -->
        <div class="space-y-4">
          <h1 class="text-4xl lg:text-6xl font-bold text-foreground leading-tight">
            Tu puerta de entrada a la
            <span class="bg-gradient-to-r from-primary to-primary-light bg-clip-text text-transparent block">
              Ciencia Descentralizada
            </span>
          </h1>
          
          <div class="text-xl lg:text-2xl text-foreground/70 leading-relaxed max-w-2xl mx-auto lg:mx-0">
            Educación, herramientas y conexiones para
            <span class="font-semibold text-primary typing-container">
              <span class="typing-text" data-words='["Investigadores", "Estudiantes", "Desarrolladores"]'>Investigadores</span>
              <span class="typing-cursor">|</span>
            </span>
            que quieren explorar el futuro de la investigación científica.
          </div>
        </div>

        <!-- Value Props -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 max-w-2xl mx-auto lg:mx-0">
          <div class="flex items-center space-x-3 p-4 bg-white/70 rounded-xl backdrop-blur-sm border border-gray-100 hover:border-primary/20 transition-colors">
            <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
            </div>
            <div>
              <div class="font-semibold text-foreground">Aprende</div>
              <div class="text-sm text-foreground/60">Educación clara</div>
            </div>
          </div>

          <div class="flex items-center space-x-3 p-4 bg-white/70 rounded-xl backdrop-blur-sm border border-gray-100 hover:border-secondary/20 transition-colors">
            <div class="w-10 h-10 bg-secondary/10 rounded-lg flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            </div>
            <div>
              <div class="font-semibold text-foreground">Explora</div>
              <div class="text-sm text-foreground/60">50+ herramientas</div>
            </div>
          </div>

          <div class="flex items-center space-x-3 p-4 bg-white/70 rounded-xl backdrop-blur-sm border border-gray-100 hover:border-accent/20 transition-colors">
            <div class="w-10 h-10 bg-accent/10 rounded-lg flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 515.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 919.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <div>
              <div class="font-semibold text-foreground">Conecta</div>
              <div class="text-sm text-foreground/60">Red global</div>
            </div>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <a href={`/${lang}/comenzar`} class="group bg-primary text-white px-8 py-4 rounded-xl font-semibold text-lg hover:bg-primary-dark transition-all transform hover:scale-105 hover:shadow-lg flex items-center justify-center space-x-2">
            <span>Comenzar mi Viaje DeSci</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
          
          <a href={`/${lang}/explora`} class="group border-2 border-gray-300 text-foreground px-8 py-4 rounded-xl font-semibold text-lg hover:border-primary hover:text-primary transition-colors flex items-center justify-center space-x-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <span>Explorar Herramientas</span>
          </a>
        </div>

        <!-- Trust Indicators -->
        <div class="flex flex-col sm:flex-row items-center justify-center lg:justify-start space-y-4 sm:space-y-0 sm:space-x-8 text-sm text-foreground/60">
          <div class="flex items-center space-x-2">
            <div class="flex -space-x-2">
              <div class="w-8 h-8 bg-gradient-to-br from-primary to-primary-light rounded-full border-2 border-white"></div>
              <div class="w-8 h-8 bg-gradient-to-br from-secondary to-secondary-light rounded-full border-2 border-white"></div>
              <div class="w-8 h-8 bg-gradient-to-br from-accent to-accent-2 rounded-full border-2 border-white"></div>
              <div class="w-8 h-8 bg-gray-300 rounded-full border-2 border-white flex items-center justify-center">
                <span class="text-xs font-bold text-gray-600">+</span>
              </div>
            </div>
            <span>Únete a la comunidad científica DeSci</span>
          </div>
          
          <div class="flex items-center space-x-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
            </svg>
            <span>Contenido verificado por expertos</span>
          </div>
        </div>
      </div>

      <!-- Right Column - Visual Element -->
      <div class="relative">
        <!-- Main Card -->
        <div class="bg-white rounded-2xl p-8 shadow-2xl border border-gray-200">
          <div class="space-y-6">
            <!-- Header -->
            <div class="text-center">
              <h3 class="text-2xl font-bold text-foreground mb-2">El Futuro de la Ciencia</h3>
              <p class="text-foreground/60">Descentralizada y Transparente</p>
            </div>

            <!-- Conceptos Clave -->
            <div class="space-y-4">
              <div class="flex items-center space-x-3 p-4 bg-primary/5 rounded-lg">
                <div class="w-10 h-10 bg-primary/20 rounded-full flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                  </svg>
                </div>
                <div class="flex-1">
                  <div class="font-semibold text-foreground">Acceso Abierto</div>
                  <div class="text-sm text-foreground/60">Investigación sin barreras</div>
                </div>
              </div>

              <div class="flex items-center space-x-3 p-4 bg-secondary/5 rounded-lg">
                <div class="w-10 h-10 bg-secondary/20 rounded-full flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                </div>
                <div class="flex-1">
                  <div class="font-semibold text-foreground">Transparencia Total</div>
                  <div class="text-sm text-foreground/60">Procesos verificables</div>
                </div>
              </div>

              <div class="flex items-center space-x-3 p-4 bg-accent/5 rounded-lg">
                <div class="w-10 h-10 bg-accent/20 rounded-full flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 515.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 919.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                  </svg>
                </div>
                <div class="flex-1">
                  <div class="font-semibold text-foreground">Colaboración Global</div>
                  <div class="text-sm text-foreground/60">Sin fronteras ni límites</div>
                </div>
              </div>

              <div class="flex items-center space-x-3 p-4 bg-primary/5 rounded-lg">
                <div class="w-10 h-10 bg-primary/20 rounded-full flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                </div>
                <div class="flex-1">
                  <div class="font-semibold text-foreground">Financiamiento Directo</div>
                  <div class="text-sm text-foreground/60">De la comunidad para la comunidad</div>
                </div>
              </div>
            </div>

            <!-- Call to Action -->
            <div class="pt-4 border-t border-gray-200">
              <p class="text-center text-sm text-foreground/60 mb-4">
                Explora el ecosistema DeSci y descubre nuevas oportunidades
              </p>
              <a href={`/${lang}/explora`} class="w-full bg-gradient-to-r from-primary to-primary-light text-white py-3 px-6 rounded-xl font-medium transition-all hover:shadow-lg flex items-center justify-center space-x-2">
                <span>Explorar Ahora</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </a>
            </div>
          </div>
        </div>

        <!-- Floating Elements -->
        <div class="absolute -top-4 -right-4 w-24 h-24 bg-gradient-to-br from-accent-yellow to-primary rounded-2xl flex items-center justify-center shadow-lg animate-pulse" style="animation-delay: 0.5s;">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>

        <div class="absolute -bottom-4 -left-4 w-20 h-20 bg-gradient-to-br from-secondary to-secondary-light rounded-xl flex items-center justify-center shadow-lg animate-pulse" style="animation-delay: 1.5s;">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-10 h-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Typing Animation */
  .typing-container {
    @apply relative inline-block;
  }

  .typing-text {
    @apply inline-block;
    animation: typing 3s steps(15) infinite;
  }

  .typing-cursor {
    @apply inline-block ml-1;
    animation: blink 1s infinite;
  }

  @keyframes typing {
    0%, 33% { width: auto; }
    34%, 66% { width: auto; }
    67%, 100% { width: auto; }
  }

  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }

  /* Custom animations */
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .typing-container {
      @apply block mt-2;
    }
  }
</style>

<script>
  // Dynamic typing effect
  document.addEventListener('DOMContentLoaded', () => {
    const typingElement = document.querySelector('.typing-text');
    if (!typingElement) return;
    
    const words = typingElement.getAttribute('data-words')?.split(',').map(w => w.replace(/[\"\'\\[\]]/g, '')) || ['Investigadores'];
    let currentWordIndex = 0;
    let currentCharIndex = 0;
    let isDeleting = false;
    
    function typeEffect() {
      const currentWord = words[currentWordIndex];
      
      if (isDeleting) {
        typingElement.textContent = currentWord.substring(0, currentCharIndex - 1);
        currentCharIndex--;
      } else {
        typingElement.textContent = currentWord.substring(0, currentCharIndex + 1);
        currentCharIndex++;
      }
      
      let typeSpeed = isDeleting ? 50 : 100;
      
      if (!isDeleting && currentCharIndex === currentWord.length) {
        typeSpeed = 2000; // Pause at end
        isDeleting = true;
      } else if (isDeleting && currentCharIndex === 0) {
        isDeleting = false;
        currentWordIndex = (currentWordIndex + 1) % words.length;
        typeSpeed = 500; // Pause before next word
      }
      
      setTimeout(typeEffect, typeSpeed);
    }
    
    typeEffect();
  });
</script>
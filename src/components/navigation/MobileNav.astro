---
interface Props {
  lang: string;
}

const { lang } = Astro.props;
---

<div class="lg:hidden">
  <input type="checkbox" id="mobile-menu-toggle" class="mobile-menu-checkbox">
  <label for="mobile-menu-toggle" class="mobile-menu-button">
    <div class="hamburger">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </label>

  <!-- Mobile Menu -->
  <div class="mobile-menu">
    <div class="mobile-menu-content">
      <nav class="mobile-menu-nav">
        <a href={`/${lang}/aprende`} class="mobile-menu-link">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          Aprende
        </a>
        <a href={`/${lang}/explora`} class="mobile-menu-link">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
          Explora
        </a>
        <a href={`/${lang}/conecta`} class="mobile-menu-link">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 515.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 919.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
          Conecta
        </a>
        <a href={`/${lang}/research`} class="mobile-menu-link">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          Research
        </a>
      </nav>

      <!-- Mobile Language & CTAs -->
      <div class="mobile-menu-footer">
        <div class="mobile-language-selector">
          <span class="text-sm font-medium text-foreground/60 mb-2 block">Idioma</span>
          <div class="flex gap-2">
            <a href="/es/" class={`mobile-lang-btn ${lang === 'es' ? 'active' : ''}`}>ES</a>
            <a href="/en/" class={`mobile-lang-btn ${lang === 'en' ? 'active' : ''}`}>EN</a>
            <a href="/pt/" class={`mobile-lang-btn ${lang === 'pt' ? 'active' : ''}`}>PT</a>
          </div>
        </div>
        
        <div class="mobile-cta-buttons">
          <a href={`/${lang}/comunidad`} class="mobile-cta-secondary">
            Comunidad
          </a>
          <a href={`/${lang}/comenzar`} class="mobile-cta-primary">
            Comenzar
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Mobile Menu */
  .mobile-menu-checkbox {
    @apply hidden;
  }

  .mobile-menu-button {
    @apply flex items-center justify-center w-10 h-10 rounded-lg hover:bg-neutral-light transition-colors cursor-pointer;
  }

  .hamburger {
    @apply relative w-6 h-6 flex flex-col justify-around;
  }

  .hamburger span {
    @apply block h-0.5 bg-foreground rounded transition-all duration-300;
  }

  .mobile-menu-checkbox:checked ~ .mobile-menu-button .hamburger span:nth-child(1) {
    @apply rotate-45 translate-y-2;
  }

  .mobile-menu-checkbox:checked ~ .mobile-menu-button .hamburger span:nth-child(2) {
    @apply opacity-0;
  }

  .mobile-menu-checkbox:checked ~ .mobile-menu-button .hamburger span:nth-child(3) {
    @apply -rotate-45 -translate-y-2;
  }

  .mobile-menu {
    @apply fixed inset-0 bg-white z-40 transform translate-x-full transition-transform duration-300 ease-in-out;
  }

  .mobile-menu-checkbox:checked ~ .mobile-menu {
    @apply translate-x-0;
  }

  .mobile-menu-content {
    @apply flex flex-col h-full p-6 pt-20;
  }

  .mobile-menu-nav {
    @apply flex flex-col space-y-4 flex-1;
  }

  .mobile-menu-link {
    @apply flex items-center space-x-3 p-4 rounded-xl hover:bg-neutral-light transition-colors text-lg font-medium text-foreground;
  }

  .mobile-menu-footer {
    @apply mt-auto space-y-6;
  }

  .mobile-language-selector {
    @apply text-center;
  }

  .mobile-lang-btn {
    @apply px-4 py-2 rounded-lg border border-gray-200 text-foreground/80 hover:border-primary hover:text-primary transition-colors;
  }

  .mobile-lang-btn.active {
    @apply bg-primary text-white border-primary;
  }

  .mobile-cta-buttons {
    @apply flex flex-col space-y-3;
  }

  .mobile-cta-secondary {
    @apply text-center py-3 px-6 border border-gray-200 text-foreground rounded-xl hover:border-primary hover:text-primary transition-colors;
  }

  .mobile-cta-primary {
    @apply text-center py-3 px-6 bg-primary text-white rounded-xl hover:bg-primary-dark transition-colors;
  }
</style>
---
interface MenuItem {
  name: string;
  href: string;
  desc: string;
}

interface MenuSection {
  title: string;
  items: MenuItem[];
}

interface Props {
  title: string;
  href: string;
  sections: MenuSection[];
  icon: 'book' | 'search' | 'users' | 'document';
}

const { title, href, sections, icon } = Astro.props;

const iconMap = {
  book: "M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253",
  search: "M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z",
  users: "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 515.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 919.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z",
  document: "M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
};
---

<div class="mega-menu-item">
  <a href={href} class="mega-menu-trigger">
    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d={iconMap[icon]} />
    </svg>
    <span>{title}</span>
    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 chevron" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
    </svg>
  </a>

  <div class="mega-menu-content">
    <div class="mega-menu-grid">
      {sections.map((section) => (
        <div class="mega-menu-section">
          <h3 class="mega-menu-section-title">{section.title}</h3>
          <ul class="mega-menu-links">
            {section.items.map((item) => (
              <li>
                <a href={item.href} class="mega-menu-link">
                  <div class="mega-menu-link-title">{item.name}</div>
                  <div class="mega-menu-link-desc">{item.desc}</div>
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</div>

<style>
  .mega-menu-item {
    @apply relative;
  }

  .mega-menu-trigger {
    @apply flex items-center space-x-1 text-foreground/80 hover:text-primary font-medium transition-colors py-2 px-1;
  }

  .mega-menu-trigger .chevron {
    @apply transition-transform duration-200;
  }

  .mega-menu-item:hover .chevron {
    @apply rotate-180;
  }

  .mega-menu-content {
    @apply absolute top-full left-1/2 transform -translate-x-1/2 mt-2 w-screen max-w-5xl bg-white rounded-xl shadow-2xl border border-gray-200 p-8 opacity-0 invisible transition-all duration-300 z-50;
  }

  .mega-menu-item:hover .mega-menu-content {
    @apply opacity-100 visible;
  }

  .mega-menu-grid {
    @apply grid grid-cols-3 gap-8;
  }

  .mega-menu-section-title {
    @apply font-semibold text-primary-dark mb-4 text-sm uppercase tracking-wide;
  }

  .mega-menu-links {
    @apply space-y-3;
  }

  .mega-menu-link {
    @apply block p-3 rounded-lg hover:bg-neutral-light transition-colors;
  }

  .mega-menu-link:hover .mega-menu-link-title {
    @apply text-primary;
  }

  .mega-menu-link-title {
    @apply font-medium text-foreground mb-1 transition-colors;
  }

  .mega-menu-link-desc {
    @apply text-sm text-foreground/60 leading-relaxed;
  }

  /* Responsive adjustments */
  @media (max-width: 1024px) {
    .mega-menu-content {
      @apply max-w-3xl;
    }
    
    .mega-menu-grid {
      @apply grid-cols-2 gap-6;
    }
  }

  @media (max-width: 768px) {
    .mega-menu-content {
      @apply max-w-sm;
    }
    
    .mega-menu-grid {
      @apply grid-cols-1 gap-4;
    }
  }
</style>
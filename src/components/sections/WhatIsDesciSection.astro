---
import { getLangFromUrl, useTranslations } from '../../i18n/utils.js';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Set video URL based on language
const videoUrl = lang === 'en'
  ? 'https://course.desciquark.com/courses/blockchain-fundamentals-and-advanced-tools-for-scientists-using-cardano/lessons/lesson-2-2-what-is-desci/'
  : lang === 'pt'
  ? 'https://course.desciquark.com/courses/fundamentos-de-blockchain-y-herramientas-avanzadas-para-cientificos-usando-cardano/lessons/leccion-2-2-que-es-desci/'
  : 'https://course.desciquark.com/courses/fundamentos-de-blockchain-y-herramientas-avanzadas-para-cientificos-usando-cardano/lessons/leccion-2-2-que-es-desci/';
---

<section class="py-16 md:py-24 bg-primary">
  <div class="container mx-auto px-6">
    <!-- Header Content -->
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6 text-white leading-tight">
        {t('whatIsDesci.title')}
      </h2>
      <p class="text-lg md:text-xl text-white/80 max-w-4xl mx-auto leading-relaxed">
        {t('whatIsDesci.subtitle')}
      </p>
    </div>

    <!-- Video Container -->
    <div class="max-w-5xl mx-auto">
      <div class="bg-neutral-light rounded-3xl p-8 md:p-12 min-h-[400px] flex flex-col justify-center items-center text-center relative">

        <!-- Video Link with Green Background -->
        <a
          href={videoUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="w-full max-w-3xl mx-auto bg-primary rounded-2xl p-12 flex items-center justify-center hover:bg-primary-light transition-colors duration-300 mb-8 group"
        >
          <div class="text-center">
            <!-- Play Icon -->
            <div class="w-20 h-20 bg-white rounded-full flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform duration-300">
              <svg class="w-10 h-10 text-primary ml-1" fill="currentColor" viewBox="0 0 24 24">
                <path d="M8 5v14l11-7z"/>
              </svg>
            </div>
            <span class="text-white text-lg font-medium">{t('whatIsDesci.videoButton')}</span>
          </div>
        </a>

        <h3 class="text-2xl md:text-3xl font-bold text-primary mb-8 leading-relaxed">
          {t('whatIsDesci.videoTitle')}
        </h3>

        <div class="mt-8">
          <a href="https://desciquark.com" target="_blank" rel="noopener noreferrer" class="bg-primary hover:bg-primary text-white hover:text-secondary py-3 px-8 rounded-lg font-medium transition-all duration-300 inline-flex items-center justify-center">
{t('whatIsDesci.learnMore')}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
---
import { getLangFromUrl, useTranslations } from '../../i18n/utils.js';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Featured research papers - esto vendría de un CMS o API en el futuro
const featuredResearch = [
  {
    title: "El Estado de DeSci en Latinoamérica 2025",
    description: "Análisis completo del ecosistema de ciencia descentralizada en América Latina, incluyendo adopción, barriers y oportunidades.",
    authors: ["ScienceOnChain Research Team"],
    date: "2025-01-15",
    category: "Market Research",
    readTime: "12 min",
    featured: true
  },
  {
    title: "Modelos Económicos en Ciencia Tokenizada",
    description: "Evaluación de diferentes modelos de tokenización para la investigación científica y su impacto en la sostenibilidad.",
    authors: ["Dr. María González", "Alex Chen"],
    date: "2024-12-20",
    category: "Economic Analysis",
    readTime: "8 min",
    featured: false
  },
  {
    title: "Impacto de la Descentralización en Peer Review",
    description: "Estudio comparativo entre sistemas tradicionales y descentralizados de revisión por pares en términos de calidad y velocidad.",
    authors: ["Dr. Carlos Medina"],
    date: "2024-11-30",
    category: "Process Innovation",
    readTime: "15 min",
    featured: false
  }
];
---

<section class="py-16 bg-gradient-to-br from-neutral-light/50 to-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 text-foreground">
        {t('home.research.title')}
      </h2>
      <p class="text-lg text-foreground/70 max-w-3xl mx-auto">
        {t('home.research.subtitle')}
      </p>
    </div>
    
    <div class="max-w-6xl mx-auto">
      <!-- Featured Paper -->
      {featuredResearch.filter(paper => paper.featured).map((paper) => (
        <div class="bg-white rounded-2xl p-8 shadow-lg border border-gray-200 mb-8">
          <div class="flex items-start justify-between mb-4">
            <div class="flex items-center space-x-3">
              <div class="px-3 py-1 bg-primary/10 text-primary text-sm font-medium rounded-full">
                {t('home.research.latest')}
              </div>
              <div class="px-3 py-1 bg-gray-100 text-foreground/70 text-sm rounded-full">
                {paper.category}
              </div>
            </div>
            <div class="text-sm text-foreground/60">
              {paper.readTime} lectura
            </div>
          </div>
          
          <h3 class="text-2xl font-bold text-foreground mb-4 hover:text-primary transition-colors cursor-pointer">
            {paper.title}
          </h3>
          
          <p class="text-foreground/70 leading-relaxed mb-6">
            {paper.description}
          </p>
          
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-4">
              <div class="flex items-center space-x-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-foreground/60" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <span class="text-sm text-foreground/70">
                  {paper.authors.join(", ")}
                </span>
              </div>
              <div class="flex items-center space-x-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-foreground/60" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <span class="text-sm text-foreground/70">
                  {new Date(paper.date).toLocaleDateString('es-ES', { 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric' 
                  })}
                </span>
              </div>
            </div>
            
            <a href={`/${lang}/research/${paper.title.toLowerCase().replace(/\s+/g, '-')}`} class="flex items-center space-x-2 text-primary hover:text-primary-dark font-medium">
              <span>Leer completo</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
          </div>
        </div>
      ))}
      
      <!-- Other Papers Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
        {featuredResearch.filter(paper => !paper.featured).map((paper) => (
          <div class="bg-white rounded-xl p-6 shadow-md border border-gray-100 hover:shadow-lg hover:-translate-y-1 transition-all duration-300">
            <div class="flex items-center justify-between mb-3">
              <div class="px-2 py-1 bg-gray-100 text-foreground/70 text-xs rounded-full">
                {paper.category}
              </div>
              <div class="text-xs text-foreground/60">
                {paper.readTime}
              </div>
            </div>
            
            <h4 class="font-bold text-foreground mb-3 hover:text-primary transition-colors cursor-pointer line-clamp-2">
              {paper.title}
            </h4>
            
            <p class="text-sm text-foreground/70 leading-relaxed mb-4 line-clamp-3">
              {paper.description}
            </p>
            
            <div class="flex items-center justify-between text-xs text-foreground/60">
              <span>{paper.authors[0]}</span>
              <span>{new Date(paper.date).toLocaleDateString('es-ES')}</span>
            </div>
          </div>
        ))}
      </div>
      
      <!-- Research Stats -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="text-center p-6 bg-white rounded-xl border border-gray-100">
          <div class="text-2xl font-bold text-primary mb-2">15+</div>
          <div class="text-sm text-foreground/70">Papers originales publicados</div>
        </div>
        <div class="text-center p-6 bg-white rounded-xl border border-gray-100">
          <div class="text-2xl font-bold text-secondary mb-2">500+</div>
          <div class="text-sm text-foreground/70">Citas y referencias</div>
        </div>
        <div class="text-center p-6 bg-white rounded-xl border border-gray-100">
          <div class="text-2xl font-bold text-accent mb-2">25</div>
          <div class="text-sm text-foreground/70">Colaboradores expertos</div>
        </div>
      </div>
      
      <!-- CTA -->
      <div class="text-center">
        <a href={`/${lang}/research`} class="inline-flex items-center space-x-3 bg-gradient-to-r from-secondary to-secondary-light text-white px-8 py-4 rounded-xl font-semibold text-lg hover:shadow-lg hover:scale-105 transition-all">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <span>{t('home.research.viewAll')}</span>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

---

<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 text-foreground">
        {t('home.ecosystem.title')}
      </h2>
      <p class="text-lg text-foreground/70 max-w-3xl mx-auto mb-8">
        {t('home.ecosystem.subtitle')}
      </p>
    </div>
    
    <!-- Interactive Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto mb-12">
      {ecosystemCategories.map((category) => (
        <div class="group bg-white border border-gray-200 rounded-2xl p-6 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 cursor-pointer">
          <!-- Header -->
          <div class="flex items-center justify-between mb-4">
            <div class="text-3xl">{category.icon}</div>
            <div class="px-3 py-1 rounded-full text-xs font-medium bg-gray-100 text-foreground/70">
              {category.count} herramientas
            </div>
          </div>
          
          <!-- Content -->
          <div class="mb-4">
            <h3 class="text-xl font-bold text-foreground mb-2 group-hover:text-primary transition-colors">
              {category.name}
            </h3>
            <p class="text-sm text-foreground/70 leading-relaxed mb-3">
              {category.description}
            </p>
          </div>
          
          <!-- Examples -->
          <div class="space-y-2">
            <p class="text-xs font-medium text-foreground/60 uppercase tracking-wide">Ejemplos populares:</p>
            <div class="flex flex-wrap gap-2">
              {category.examples.map((example) => (
                <span class="px-2 py-1 bg-gray-100 text-xs text-foreground/70 rounded-md">
                  {example}
                </span>
              ))}
            </div>
          </div>
          
          <!-- Hover indicator -->

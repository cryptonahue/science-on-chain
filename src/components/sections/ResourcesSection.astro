---
import { getLangFromUrl, useTranslations } from '../../i18n/utils.js';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="py-16 md:py-24 bg-primary">
  <div class="container mx-auto px-6">
    <!-- Header Content -->
    <div class="mb-12">
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4 text-white">
        {t('resources.title')}
      </h2>
      <p class="text-lg md:text-xl text-white/80 leading-relaxed">
        {t('resources.subtitle')}
      </p>
    </div>

    <!-- Resources Grid -->
    <div class="grid lg:grid-cols-2 gap-8 max-w-6xl mx-auto">

      <!-- DeSci Quark Course Card -->
      <div class="bg-primary-light rounded-3xl p-8 relative">
        <!-- Course Badge -->
        <div class="inline-flex items-center px-4 py-2 bg-secondary text-foreground text-sm font-medium rounded-full mb-6">
          {t('resources.course.badge')}
        </div>

        <!-- Course Title -->
        <h3 class="text-3xl md:text-4xl font-bold text-white mb-6">
          {t('resources.course.title')}
        </h3>

        <!-- Course Subtitle -->
        <h4 class="text-xl md:text-2xl font-semibold text-white/90 mb-6 leading-tight">
          {t('resources.course.subtitle')}
        </h4>

        <!-- Course Description -->
        <p class="text-white/80 mb-8 leading-relaxed">
          {t('resources.course.description')}
        </p>

        <!-- CTA Button -->
        <div class="mt-8">
          <a href="https://desciquark.com" target="_blank" rel="noopener noreferrer" class="w-full bg-primary hover:bg-primary text-white hover:text-secondary py-4 px-8 rounded-xl font-semibold text-lg transition-all duration-300 inline-flex items-center justify-center">
            {t('resources.course.cta')}
          </a>
        </div>
      </div>

      <!-- Tools in Development Card -->
      <div class="border-2 border-white/20 border-dashed rounded-3xl p-8">
        <h3 class="text-3xl md:text-4xl font-bold text-white mb-8">
          {t('resources.tools.title')}
        </h3>

        <!-- Tools List -->
        <div class="space-y-4 mb-8">
          <div class="flex items-center space-x-3">
            <div class="w-2 h-2 bg-secondary rounded-full"></div>
            <span class="text-white/90 text-lg">{t('resources.tools.item1')}</span>
          </div>
          <div class="flex items-center space-x-3">
            <div class="w-2 h-2 bg-secondary rounded-full"></div>
            <span class="text-white/90 text-lg">{t('resources.tools.item2')}</span>
          </div>
          <div class="flex items-center space-x-3">
            <div class="w-2 h-2 bg-secondary rounded-full"></div>
            <span class="text-white/90 text-lg">{t('resources.tools.item3')}</span>
          </div>
        </div>

        <!-- Follow Work Button -->
        <div class="mt-8">
          <a href="https://www.linkedin.com/company/scienceonchain" target="_blank" rel="noopener noreferrer" class="w-full bg-primary-light hover:bg-primary text-white hover:text-secondary py-4 px-8 rounded-xl font-semibold text-lg transition-all duration-300 inline-flex items-center justify-center space-x-2">
            <span>{t('resources.follow.cta')}</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
            </svg>
          </a>
        </div>
      </div>

    </div>
  </div>
</section>
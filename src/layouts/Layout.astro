---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import "../styles/global.css";

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "ScienceOnChain - Decentralized science for a better future" } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    
    <!-- Prevent search engine indexing -->
    <meta name="robots" content="noindex, nofollow, nosnippet, noarchive, notranslate, noimageindex" />
    <meta name="googlebot" content="noindex, nofollow, nosnippet, noarchive, notranslate, noimageindex" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Manrope:wght@400;500;600;700;800&family=JetBrains+Mono:wght@400;500&family=Merriweather:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body class="bg-neutral-light overflow-x-hidden">
    <header class="sticky top-0 z-50 backdrop-blur-lg bg-white/70 border-b border-gray-100">
      <div class="container mx-auto px-4 py-4 flex justify-between items-center">
        <div class="flex items-center gap-3">
          <img src="/sc-logo-minimal-alt.svg" alt="ScienceOnChain Logo" class="h-10 w-auto" />
          <span class="font-display font-bold text-xl tracking-tight">ScienceOnChain</span>
        </div>
        <nav class="hidden md:flex gap-8">
          <a href={`/${lang}/`} class="text-neutral-dark/80 hover:text-primary font-medium transition">{t('nav.home')}</a>
          <a href={`/${lang}/about`} class="text-neutral-dark/80 hover:text-primary font-medium transition">{t('nav.about')}</a>
          <a href={`/${lang}/research`} class="text-neutral-dark/80 hover:text-primary font-medium transition">{t('nav.research')}</a>
          <a href={`/${lang}/community`} class="text-neutral-dark/80 hover:text-primary font-medium transition">{t('nav.community')}</a>
          <a href={`/${lang}/contact`} class="text-neutral-dark/80 hover:text-primary font-medium transition">{t('nav.contact')}</a>
        </nav>
        <div class="flex items-center gap-3">
          <div class="hidden sm:flex gap-2">
            <a href="/en/" class={`p-1 px-2 text-sm rounded ${lang === 'en' ? 'bg-primary/10 text-primary font-medium' : 'text-gray-500'}`}>EN</a>
            <a href="/es/" class={`p-1 px-2 text-sm rounded ${lang === 'es' ? 'bg-primary/10 text-primary font-medium' : 'text-gray-500'}`}>ES</a>
          </div>
          <a href="#" class="hidden md:block btn-primary text-sm py-2">
            Join the Network
          </a>
          <button class="block md:hidden bg-white p-2 rounded shadow-sm">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
            </svg>
          </button>
        </div>
      </div>
    </header>
    
    <main>
      <slot />
    </main>
    
    <footer class="bg-neutral-dark text-white py-16 relative overflow-hidden">
      <div class="absolute top-0 left-0 w-full h-full opacity-5">
        <div class="bg-grid absolute inset-0"></div>
      </div>
      <div class="container mx-auto px-4 relative z-10">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-10">
          <div>
            <div class="flex items-center gap-3 mb-6">
              <img src="/sc-logo-ultra-minimal.svg" alt="ScienceOnChain Logo" class="h-10 w-auto" />
              <span class="font-display font-bold text-white text-xl">ScienceOnChain</span>
            </div>
            <p class="text-gray-400 text-sm mb-6">
              Building the future of decentralized science through blockchain technology, transparency, and open collaboration.
            </p>
            <div class="flex gap-4">
              <a href="#" class="text-gray-400 hover:text-white transition">
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"></path>
                </svg>
              </a>
              <a href="#" class="text-gray-400 hover:text-white transition">
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
                </svg>
              </a>
              <a href="#" class="text-gray-400 hover:text-white transition">
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path fill-rule="evenodd" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10c5.51 0 10-4.48 10-10S17.51 2 12 2zm6.605 4.61a8.502 8.502 0 011.93 5.314c-.281-.054-3.101-.629-5.943-.271-.065-.141-.12-.293-.184-.445a25.416 25.416 0 00-.564-1.236c3.145-1.28 4.577-3.124 4.761-3.362zM12 3.475c2.17 0 4.154.813 5.662 2.148-.152.216-1.443 1.941-4.48 3.08-1.399-2.57-2.95-4.675-3.189-5A8.687 8.687 0 0112 3.475zm-3.633.803a53.896 53.896 0 013.167 4.935c-3.992 1.063-7.517 1.04-7.896 1.04a8.581 8.581 0 014.729-5.975zM3.453 12.01v-.21c.37.01 4.512.065 8.775-1.215.25.477.477.965.694 1.453-.109.033-.228.065-.336.098-4.404 1.42-6.747 5.303-6.942 5.629a8.522 8.522 0 01-2.19-5.705zM12 20.547a8.482 8.482 0 01-5.239-1.8c.152-.315 1.888-3.656 6.703-5.337.022-.01.033-.01.054-.022a35.318 35.318 0 011.823 6.475 8.4 8.4 0 01-3.341.684zm4.761-1.465c-.086-.52-.542-3.015-1.659-6.084 2.679-.423 5.022.271 5.314.369a8.468 8.468 0 01-3.655 5.715z" clip-rule="evenodd"></path>
                </svg>
              </a>
            </div>
          </div>
          <div>
            <h3 class="font-display font-medium text-lg mb-4">Links</h3>
            <ul class="space-y-2">
              <li><a href={`/${lang}/`} class="text-gray-400 hover:text-white transition">{t('nav.home')}</a></li>
              <li><a href={`/${lang}/about`} class="text-gray-400 hover:text-white transition">{t('nav.about')}</a></li>
              <li><a href={`/${lang}/research`} class="text-gray-400 hover:text-white transition">{t('nav.research')}</a></li>
              <li><a href={`/${lang}/community`} class="text-gray-400 hover:text-white transition">{t('nav.community')}</a></li>
              <li><a href={`/${lang}/contact`} class="text-gray-400 hover:text-white transition">{t('nav.contact')}</a></li>
            </ul>
          </div>
          <div>
            <h3 class="font-display font-medium text-lg mb-4">Community</h3>
            <ul class="space-y-2">
              <li><a href="#" class="text-gray-400 hover:text-white transition">Twitter</a></li>
              <li><a href="#" class="text-gray-400 hover:text-white transition">Discord</a></li>
              <li><a href="#" class="text-gray-400 hover:text-white transition">GitHub</a></li>
              <li><a href="#" class="text-gray-400 hover:text-white transition">Blog</a></li>
              <li><a href="#" class="text-gray-400 hover:text-white transition">Forum</a></li>
            </ul>
          </div>
          <div>
            <h3 class="font-display font-medium text-lg mb-4">Newsletter</h3>
            <p class="text-gray-400 text-sm mb-4">
              Subscribe to our newsletter for updates on the future of decentralized science.
            </p>
            <div class="flex flex-col sm:flex-row gap-2">
              <input 
                type="email" 
                placeholder="Your email" 
                class="px-3 py-2 rounded-lg bg-white/5 border border-white/10 text-white placeholder:text-gray-500 focus:outline-none focus:ring-2 focus:ring-primary/40 w-full"
              />
              <button class="btn-primary whitespace-nowrap">
                Subscribe
              </button>
            </div>
          </div>
        </div>
        <div class="border-t border-white/10 mt-12 pt-8 flex flex-col md:flex-row justify-between items-center">
          <p class="text-gray-400 text-sm">
            &copy; {new Date().getFullYear()} ScienceOnChain. {t('footer.rights')}
          </p>
          <div class="flex gap-6 mt-4 md:mt-0">
            <a href="#" class="text-gray-400 hover:text-white text-sm transition">Terms</a>
            <a href="#" class="text-gray-400 hover:text-white text-sm transition">Privacy</a>
            <a href="#" class="text-gray-400 hover:text-white text-sm transition">Cookies</a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>